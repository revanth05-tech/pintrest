<%- include('./partials/header.ejs') %>
<div class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=1600&auto=format&fit=crop&q=80')] bg-cover bg-center flex items-center justify-center">
  <div class="w-96 bg-zinc-100/90 px-7 py-5 rounded-[30px] shadow-2xl backdrop-blur-md">
    <h1 class="text-3xl text-center tracking-tighter font-semibold text-zinc-800 capitalize leading-none">Welcome to Pinterest</h1>
    <form action="/login" method="post">
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-3 bg-zinc-50" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-3 bg-zinc-50" type="password" name="password" placeholder="password">
      <a href="#" class="mt-2 font-semibold text-zinc-700 inline-block">Forgot Password ?</a>
      <input class="border-2 rounded-full block mt-4 w-full px-3 py-3 bg-red-600 text-white cursor-pointer hover:bg-red-700 transition" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">
        By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <p class="text-sm text-zinc-700 mt-3 text-center">
        Not on Pintrest yet? <a href="/register" class="font-semibold text-red-600 hover:underline"> <strong>Sign up</strong></a>
      </p>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
