<%- include('partials/header') %>

<div class="relative w-full h-screen bg-[url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=1600&auto=format&fit=crop&q=80')] bg-cover bg-center flex items-center justify-center">
  
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-red-600/50 via-pink-500/40 to-purple-600/50"></div>

  <!-- Register Card -->
  <div class="relative z-10 w-96 bg-zinc-100/90 px-7 py-5 rounded-[30px] shadow-2xl backdrop-blur-md">
    <h1 class="text-3xl text-center tracking-tighter font-semibold text-zinc-800 capitalize leading-none mb-4">Create Your Account</h1>
    <form action="/register" method="POST">
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-3 bg-zinc-50" type="text" name="username" placeholder="Username" required>
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-3 bg-zinc-50" type="email" name="email" placeholder="Email" required>
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-3 bg-zinc-50" type="password" name="password" placeholder="Password" required>
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-3 bg-zinc-50" type="password" name="confirm_password" placeholder="Confirm Password" required>
      <input class="border-2 rounded-full block mt-4 w-full px-3 py-3 bg-red-600 text-white cursor-pointer hover:bg-red-700 transition" type="submit" value="Register">
      <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center">
        By creating an account, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy.
      </p>
      <p class="text-sm text-zinc-700 mt-3 text-center">
        Already have an account? <a href="/login" class="font-semibold text-red-600 hover:underline">Login</a>
      </p>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
